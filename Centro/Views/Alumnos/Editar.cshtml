@model AlumnosModel
@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <h5 class="card-header">Editar Alumno</h5>
    <div class="card-body">
        <form asp-action="Editar" asp-controller="Alumnos" method="POST">
            <input asp-for="id_alumno" type="hidden" class="form-control">
            <div class="mb-3">
                <label class="form-label">Nombre del alumno</label>
                <input asp-for="nombre" type="text" class="form-control">
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Correo electronico</label>
                <input asp-for="correo" type="text" class="form-control">
                <span asp-validation-for="correo" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">nombre de usuario</label>
                <input asp-for="usuario" type="text" class="form-control">
                <span asp-validation-for="usuario" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="Listar" asp-controller="Alumnos" class="btn btn-warning">volver a la lista</a>
        </form>
    </div>
</div>
