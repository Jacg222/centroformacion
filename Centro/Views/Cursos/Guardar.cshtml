@model CursosModel
@{
    ViewData["Title"] = "Guardar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <h5 class="card-header">Crear Curso</h5>
    <div class="card-body">
        <form asp-action="Guardar" asp-controller="Cursos" method="POST">
            <div class="mb-3">
                <label class="form-label">Nombre del curso</label>
                <input asp-for="nombre" type="text" class="form-control">
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Descripcion del curso</label>
                <input asp-for="descripcion" type="text" class="form-control">
                @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
                <span asp-validation-for="descripcion" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">temario del curso</label>
                <input asp-for="temario" type="text" class="form-control">
                @Html.ValidationMessageFor(model => model.temario, "", new { @class = "text-danger" })
                <span asp-validation-for="temario" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="Listar" asp-controller="Cursos" class="btn btn-warning">volver a la lista</a>
        </form>
    </div>
</div>
